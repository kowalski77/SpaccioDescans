@using SpaccioDescans.Infrastructure.Persistence
@using Radzen

<RadzenCard Style="width: fit-content; min-width: 200px;" Class="mt-3 mx-auto">
    <AuthorizeView>
        <Authorized>
            <RadzenMenu>
                <RadzenMenuItem Text="Inventario" Icon="dashboard">
                    <RadzenMenuItem id="inventory-link" Text="Productos" Path="inventory" Icon="list" />
                </RadzenMenuItem>
                <RadzenMenuItem Text="Facturación" Icon="payment">
                    <RadzenMenuItem Text="Crear factura" Path="order" Icon="description"></RadzenMenuItem>
                    <RadzenMenuItem Text="CheckBox" Path="checkbox" Icon="check_circle"></RadzenMenuItem>
                    <RadzenMenuItem Text="TextBox" Path="textbox" Icon="input"></RadzenMenuItem>
                    <RadzenMenuItem Text="Password" Path="password" Icon="payment"></RadzenMenuItem>
                    <RadzenMenuItem Text="Numeric" Path="numeric" Icon="aspect_ratio"></RadzenMenuItem>
                    <RadzenMenuItem Text="DatePicker" Path="datepicker" Icon="date_range"></RadzenMenuItem>
                </RadzenMenuItem>
            </RadzenMenu>
        </Authorized>
    </AuthorizeView>
</RadzenCard>


