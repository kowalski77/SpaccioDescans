<div class="row">
    <div class="col-4">
        <RadzenLabel Text="@Text" />
    </div>
    <div class="col-6">
        <RadzenNumeric TValue="decimal" Style="width: 40%;"
                       @bind-Value="@Amount"
                       Format="0.00" Class="mr-1"  
                       ReadOnly="@ReadOnly"
                       ShowUpDown="@ShowUpDown"/>
    </div>
</div>

@code
{
    [Parameter]
    public string Text { get; set; } = default!;

    [Parameter]
    public decimal Amount { get; set; }

    [Parameter]
    public bool ShowUpDown { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; }
}
